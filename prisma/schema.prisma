generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Client {
  id        String    @id @default(cuid())
  name      String
  email     String?
  address   String?
  phone     String?
  userId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  invoices  Invoice[]

  @@index([userId])
  @@unique([userId, email])
}

model Invoice {
  id             String         @id @default(cuid())
  number         String
  date           DateTime       @default(now())
  dueDate        DateTime?
  subtotal       Decimal        @default(0)
  total          Decimal        @default(0)
  currency       String         @default("USD")
  notes          String?
  discount       Decimal        @default(0)
  discountValue  Decimal        @default(0)
  discountType   String         @default("PERCENTAGE")
  clientId       String
  userId         String
  sentAt         DateTime?
  paidAt         DateTime?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @default(now()) @updatedAt
  tax            Decimal        @default(0)
  tax1Name       String?
  tax1Rate       Decimal        @default(0)
  tax2Name       String?
  tax2Rate       Decimal        @default(0)
  acceptPayments Boolean        @default(false)
  deleted        Boolean        @default(false)
  refundedAt     DateTime?
  paidVia        String?
  paymentRef     String?
  refundRef      String?
  status         InvoiceStatus  @default(DRAFT)
  client         Client         @relation(fields: [clientId], references: [id])
  user           User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  events         InvoiceEvent[]
  items          InvoiceItem[]
  payments       Payment[]

  @@index([userId])
}

model InvoiceEvent {
  id        String   @id @default(cuid())
  invoiceId String
  type      String
  actorId   String?
  ref       String?
  notes     String?
  createdAt DateTime @default(now())
  invoice   Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@index([invoiceId])
}

model InvoiceItem {
  id          String   @id @default(cuid())
  description String
  amount      Decimal
  invoiceId   String
  createdAt   DateTime @default(now())
  quantity    Int      @default(1)
  invoice     Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}

model Payment {
  id              String   @id @default(cuid())
  amount          Decimal
  currency        String   @default("USD")
  stripePaymentId String   @unique
  status          String
  paymentMethod   String
  invoiceId       String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now()) @updatedAt
  invoice         Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                       String        @id @default(cuid())
  name                     String?
  email                    String        @unique
  emailVerified            DateTime?
  image                    String?
  company                  String?
  trialEnds                DateTime      @default(dbgenerated("(now() + '14 days'::interval)"))
  subscriptionStatus       String        @default("TRIAL")
  createdAt                DateTime      @default(now())
  updatedAt                DateTime      @default(now()) @updatedAt
  stripeAccountId          String?
  stripeAccountStatus      String        @default("DISCONNECTED")
  stripeOnboardingComplete Boolean       @default(false)
  onboardingCompletedAt    DateTime?
  accounts                 Account[]
  clients                  Client[]
  invoices                 Invoice[]
  sessions                 Session[]
  settings                 UserSettings?
}

model UserSettings {
  id                 String   @id @default(cuid())
  userId             String   @unique
  defaultCurrency    String   @default("USD")
  defaultTaxRate     Decimal  @default(0)
  invoicePrefix      String   @default("INV")
  nextInvoiceNumber  Int      @default(1)
  companyName        String?
  companyAddress     String?
  companyPhone       String?
  companyEmail       String?
  companyWebsite     String?
  companyLogoUrl     String?
  companyLogoPath    String?
  emailNotifications Boolean  @default(true)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @default(now()) @updatedAt
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  REFUNDED
  OVERDUE
}
